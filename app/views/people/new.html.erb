<%= form_for @person do |f| %>
  <%= f.text_field :name %> <br /><br />
  <%= f.fields_for :addresses do |add| %>
    <%= add.label :street_address_1 %>
    <%= add.text_field :street_address_1 %>
    <%= add.label :street_address_2 %>
    <%= add.text_field :street_address_2 %>
    <%= add.label :city %>
    <%= add.text_field :city %>
    <%= add.label :state %>
    <%= add.text_field :state %>
    <%= add.label :zipcode %>
    <%= add.text_field :zipcode %>
    <%= add.label :address_type %>
    <%= add.text_field :address_type %>
    <% end %>
 <%= f.submit %>
<% end %>
